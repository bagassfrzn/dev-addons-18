<odoo>
    <record id="view_extracurricular_absence_form" model="ir.ui.view">
        <field name="name">extracurricular.absence.form</field>
        <field name="model">extracurricular.absence</field>
        <field name="arch" type="xml">
            <form string="Absensi Ekskul">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="extracurricular_id"/>
                        <field name="documentation" widget="image"/>
                    </group>
                    <notebook>
                        <page string="Data Absensi">
                            <field name="absence_line_ids">
                                <list editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_extracurricular_absence_list" model="ir.ui.view">
        <field name="name">extracurricular.absence.list</field>
        <field name="model">extracurricular.absence</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="extracurricular_id"/>
                <field name="create_uid"/>
            </list>
        </field>
    </record>

    <record id="action_extracurricular_absence" model="ir.actions.act_window">
        <field name="name">Absensi Ekskul</field>
        <field name="res_model">extracurricular.absence</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan absensi ekskul baru
            </p>
        </field>
    </record>

    <menuitem id="menu_absensi_root"
              name="Absensi"
              parent="extracurricular_root_menu"
              sequence="20"/>
              
    <menuitem id="menu_absensi_action"
              name="Absensi Ekskul"
              parent="menu_absensi_root"
              action="action_extracurricular_absence"
              sequence="10"/>
</odoo>
