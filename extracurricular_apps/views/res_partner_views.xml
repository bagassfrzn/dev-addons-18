    <record id="res_partner_view_form_inherit_extracurricular" model="ir.ui.view">
        <field name="name">res.partner.extracurricular.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Cari notebook yang sudah ada -->
            <xpath expr="//notebook" position="inside">
                <page string="Extracurricular">
                    <group>
                        <field name="extracurricular_ids" widget="many2many_tags"/>
                        <field name="extracurricular_contact_type"/>
                        <field name="extracurricular_contact_position" invisible="extracurricular_contact_type != 'student'"/>
                        <field name="grade" invisible="extracurricular_contact_type != 'student'"/>
                        <field name="major" invisible="grade == False"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
