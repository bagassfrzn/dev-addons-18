<odoo>
    <record id="view_monthly_report_wizard_form" model="ir.ui.view">
        <field name="name">extracurricular.monthly.report.wizard.form</field>
        <field name="model">extracurricular.monthly.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Monthly Report">
                <group>
                    <group>
                        <field name="extracurricular_id"/>
                        <field name="month"/>
                        <field name="year"/>
                    </group>
                    <group>
                        <field name="start_date" invisible="1"/>
                        <field name="end_date" invisible="1"/>
                        <field name="week1_absence_id"
                               domain="[('extracurricular_id', '=', extracurricular_id), 
                                        ('date', '&gt;', start_date), 
                                        ('date', '&lt;=', end_date)]"/>
                        <field name="week2_absence_id"
                               domain="[('extracurricular_id', '=', extracurricular_id), 
                                        ('date', '&gt;', start_date), 
                                        ('date', '&lt;=', end_date)]"/>
                        <field name="week3_absence_id"
                               domain="[('extracurricular_id', '=', extracurricular_id), 
                                        ('date', '&gt;', start_date), 
                                        ('date', '&lt;=', end_date)]"/>
                        <field name="week4_absence_id"
                               domain="[('extracurricular_id', '=', extracurricular_id), 
                                        ('date', '&gt;', start_date), 
                                        ('date', '&lt;=', end_date)]"/>
                        <field name="week5_absence_id"
                               domain="[('extracurricular_id', '=', extracurricular_id), 
                                        ('date', '&gt;', start_date), 
                                        ('date', '&lt;=', end_date)]"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Batal" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
