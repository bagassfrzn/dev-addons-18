<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_our_client_form" model="ir.ui.view">
        <field name="name">our.client.form</field>
        <field name="model">our.client</field>
        <field name="arch" type="xml">
            <form string="Our Client">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_published"/>
                        <field name="client_url" widget="url" placeholder="e.g. https://www.odoo.com"/>
                        <field name="category"/>
                        <field name="description"/>
                    </group>
                    <field name="image" widget="image" class="oe_avatar"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_our_client_list" model="ir.ui.view">
        <field name="name">our.client.list</field>
        <field name="model">our.client</field>
        <field name="arch" type="xml">
            <list string="Our Clients">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="action_website_our_client" model="ir.actions.act_window">
        <field name="name">Our Clients</field>
        <field name="res_model">our.client</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new our client to display on your website!
            </p>
        </field>
    </record>

    <!-- <menuitem
        id="menu_website_our_client"
