                <!-- /* General */ -->
                .section-padding { padding: 100px 0; }
                <!-- /* Hero Section */ -->
                .hero-section-tm {
                    position: relative;
                    padding: 100px 0; 
                    min-height: 160vh; 
                    background: url('/tmi_web/static/src/img/background-hero.png') no-repeat top center;
                    background-size: cover;
                    color: white;
                    display: flex;
                    align-items: center;
                }
                .hero-section-tm .hero-overlay {
                    position: absolute;
                    top: 0; left: 0; right: 0; bottom: 0;
                    background: linear-gradient(180deg, rgba(255, 255, 255, 0.00) 0%, #FFF 100%);;
                }
                .hero-section-tm .hero-content {
                    position: relative;
                    z-index: 2;
                }
                .hero-badge-tm {
                    display: inline-block;
                    padding: 15px 25px;
                    background-color: rgba(255, 255, 255, 0.4);
                    border-radius: 10px;
                    font-size: 1.4rem;
                    font-weight: 500;
                    margin-bottom: 1.5rem;
                }
                .hero-title-tm { 
                    font-size: 4.5rem;
                    font-weight: 700;
                    max-width: 750px;
                    line-height: 1;
                    margin-bottom: 1rem;
                }
                .hero-description-tm {
                    font-size: 1.6rem;
