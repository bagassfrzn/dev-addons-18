<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_our_area_form" model="ir.ui.view">
        <field name="name">our.area.form</field>
        <field name="model">our.area</field>
        <field name="arch" type="xml">
            <form string="Our area">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_published"/>
                        <field name="area_url" widget="url" placeholder="e.g. https://www.odoo.com"/>
                        <field name="description"/>
                    </group>
                    <field name="area_icon" widget="image" class="oe_avatar"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_our_area_list" model="ir.ui.view">
        <field name="name">our.area.list</field>
        <field name="model">our.area</field>
        <field name="arch" type="xml">
            <list string="Our areas">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="action_website_our_area" model="ir.actions.act_window">
        <field name="name">Our areas</field>
        <field name="res_model">our.area</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new our area to display on your website!
            </p>
        </field>
    </record>

    <!-- <menuitem
        id="menu_website_our_area"
